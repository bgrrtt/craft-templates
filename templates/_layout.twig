  {% endblock %}
  </main>

  <footer class="site-footer">
    <p>&copy; {{ now.year }} {{ craft.request.serverName | ucfirst }}. All rights reserved • Built with <a href="http://buildwithcraft.com">Craft</a></p>
  </footer>

{% endblock %}
